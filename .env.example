# Webflow API Configuration
WEBFLOW_API_TOKEN=Bearer your-webflow-api-token-here
WEBFLOW_COLLECTION_ID=your-collection-id-here
WEBFLOW_SITE_ID=your-site-id-here

# Server Configuration
PORT=8000
NODE_ENV=development

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://example.com,https://app.example.com
CORS_ORIGINS=https://*.webflow.io,https://*.webflow.com

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=10
RATE_LIMIT_WINDOW_MS=60000

# Logging
LOG_LEVEL=info

# Optional: Error Monitoring
SENTRY_DSN=

# Deployment Configuration (for production)
VERSION=1.0.0
GIT_COMMIT=
GIT_BRANCH=main

# Deno Deploy Environment Variables (set automatically)
# DENO_REGION=
# DENO_DEPLOYMENT_ID=