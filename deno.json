{
  "tasks": {
    "dev": "deno run --watch --allow-net --allow-env --allow-read --allow-sys src/main.ts",
    "start": "deno run --allow-net --allow-env src/main.ts",
    "test": "deno test --allow-net --allow-env --allow-read",
    "test:unit": "deno test tests/unit --no-check --allow-all",
    "test:integration": "deno test tests/integration --no-check --allow-all",
    "test:performance": "deno test tests/performance --no-check --allow-all --allow-hrtime",
    "test:coverage": "deno run --allow-all scripts/coverage.ts",
    "test:watch": "deno test --watch --no-check --allow-all",
    "test:cors": "deno run --allow-net scripts/test-cors.ts",
    "test:form": "deno run --allow-net --allow-read scripts/dev/serve-test.ts",
    "test:api": "deno run --allow-net --allow-env --allow-read scripts/test-form.ts",
    "deploy": "deno run --allow-all scripts/deploy.ts",
    "deploy:prod": "deno run --allow-all scripts/deploy.ts --prod",
    "deploy:preview": "deno run --allow-all scripts/deploy.ts --preview",
    "deploy:check": "deno run --allow-all scripts/check-env.ts",
    "build": "deno run --allow-all scripts/build.ts",
    "preview": "deno run --allow-all scripts/preview.ts",
    "check": "deno check src/**/*.ts && deno lint && deno fmt --check",
    "fix:lockfile": "deno run --allow-read --allow-write --allow-run scripts/fix-lockfile.ts",
    "lint": "deno lint"
  },
  "imports": {
    "@hono/hono": "jsr:@hono/hono@^4.4.0",
    "@hono/zod-validator": "npm:@hono/zod-validator@^0.7.0",
    "@hono/cors": "jsr:@hono/hono/cors",
    "@hono/logger": "jsr:@hono/hono/logger",
    "zod": "npm:zod@^3.23.0",
    "quill-delta-to-html": "npm:quill-delta-to-html@^0.12.0",
    "dompurify": "npm:dompurify@^3.0.0",
    "jsdom": "npm:jsdom@^24.0.0",
    "slugify": "npm:slugify@^1.6.6",
    "reading-time": "npm:reading-time@^1.5.0",
    "@std/testing/asserts": "jsr:@std/testing@^0.218.0/asserts",
    "@std/testing/bdd": "jsr:@std/testing@^0.218.0/bdd",
    "@std/testing/mock": "jsr:@std/testing@^0.218.0/mock",
    "@std/testing/time": "jsr:@std/testing@^0.218.0/time",
    "@std/assert": "jsr:@std/assert@^1.0.13",
    "@std/dotenv": "jsr:@std/dotenv@^0.218.0",
    "@std/fmt": "jsr:@std/fmt@^0.218.0",
    "@std/http": "jsr:@std/http@^0.218.0",
    "@/": "./src/",
    "@config/": "./src/config/",
    "@middleware/": "./src/middleware/",
    "@routes/": "./src/routes/",
    "@services/": "./src/services/",
    "@utils/": "./src/utils/",
    "@types/": "./src/types/",
    "@app-types": "./src/types/hono.ts",
    "@tests/data": "./tests/data/index.ts"
  },
  "lint": {
    "include": ["src/"],
    "exclude": ["tests/fixtures/"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "include": ["src/", "tests/"],
    "exclude": ["tests/fixtures/"],
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": false,
      "proseWrap": "preserve"
    }
  },
  "deploy": {
    "project": "webflow-middleware",
    "exclude": [
      "tests/**",
      ".env*",
      "scripts/dev/**",
      "*.md",
      ".git/**",
      ".vscode/**",
      "*.log"
    ],
    "include": [
      "src/**",
      "deno.json",
      "deno.lock"
    ],
    "entrypoint": "src/main.ts"
  }
}